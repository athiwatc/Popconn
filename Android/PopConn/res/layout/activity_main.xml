<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/activity_main_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_facebook" />

    <Button
        android:id="@+id/activity_main_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_twitter" />

    <Button
        android:id="@+id/activity_main_instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_instagram" />

    <Button
        android:id="@+id/activity_main_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_start" />

</LinearLayout>