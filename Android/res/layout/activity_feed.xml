<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity" >

    <ImageView
        android:id="@+id/activity_feed_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/activity_feed_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_feed_picture" >

    </ListView>

    <TextView
        android:id="@+id/activity_feed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/activity_feed_thumbnail"
        android:text="@string/hello_world"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/activity_feed_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_feed_name"
        android:layout_below="@+id/activity_feed_name"
        android:text="@string/hello_world"
        android:textSize="16dp" />

</RelativeLayout>